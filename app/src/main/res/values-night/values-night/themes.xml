<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hosha" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E20000</item>
        <item name="colorSecondaryVariant">#E20000</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:fontFamily">@font/cairo</item>-->
        <!--<item name="android:textViewStyle">@style/MyTextView</item>-->
        <item name="materialButtonStyle">@style/MyMaterialButtons</item>
        <item name="editTextStyle">@style/MyEditText</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <!-- ****************************************************** TextView  -->
    <style name="MyTextView" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/cairo</item>
    </style>

    <!-- ************************************************* MaterialButton  -->
    <style name="RegisterButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="iconPadding">@dimen/hzPaddingToScreen</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="cornerRadius">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/p2_text_size</item>
    </style>

    <!-- ****************************************************** EditText  -->
    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingHorizontal">@dimen/vertical_padding_to_views</item>
    </style>

    <!-- ///////////////////////////////////////////////// Material Button  -->
    <style name="MyMaterialButtons" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/_5sdp</item>
    </style>

    <!-- ****************************************************** Progress Dialog Style  -->
    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:background">@color/black</item>
        <item name="colorAccent">#E20000</item>
    </style>

    <!-- ****************************************************** Bottom Sheet  -->
    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/gry</item>
    </style>
    <!-- It helps change color when you press and slide on Switch -->
    <style name="MyIOSSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">#F50000</item>
        <item name="android:colorForeground">#888888</item>
    </style>

    <!-- ****************************************************** Splash screen -->
    <style name="splash_screen_theme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="splash_screen_theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splash_screen_theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="splash_screen_theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ****************************************************** Shape Left -->
    <style name="CorneredShapeLeft" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">@dimen/_5sdp</item>
        <item name="cornerSizeBottomLeft">@dimen/_5sdp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- ****************************************************** Shape Right -->
    <style name="CorneredShapeRight" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">@dimen/_5sdp</item>
        <item name="cornerSizeBottomRight">@dimen/_5sdp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- ****************************************************** Shape Top -->
    <style name="CorneredShapeTop" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- ****************************************************** Shape Top 2 -->
    <style name="CorneredShapeTop2" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopRight">@dimen/_25sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_25sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <!-- ****************************************************** Bottom Sheet -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>